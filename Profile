import React, { useState, useEffect } from 'react';
import { motion } from 'framer-motion';
import { base44 } from '@/api/base44Client';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { Card } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Avatar, AvatarFallback, AvatarImage } from "@/components/ui/avatar";
import { Badge } from "@/components/ui/badge";
import { 
  User, Settings, Camera, Save, Zap, TreeDeciduous, 
  Flame, TrendingDown, Award, Calendar, MapPin, LogOut
} from 'lucide-react';
import { toast } from 'sonner';

import VirtualPlanet from '../components/planet/VirtualPlanet';

export default function Profile() {
  const queryClient = useQueryClient();
  const [user, setUser] = useState(null);
  const [isEditing, setIsEditing] = useState(false);
  const [formData, setFormData] = useState({
    username: '',
    location: ''
  });

  useEffect(() => {
    const loadUser = async () => {
      const userData = await base44.auth.me();
      setUser(userData);
    };
    loadUser();
  }, []);

  const { data: profile } = useQuery({
    queryKey: ['userProfile'],
    queryFn: async () => {
      const profiles = await base44.entities.UserProfile.filter({ created_by: user?.email });
      if (profiles[0]) {
        setFormData({
          username: profiles[0].username || '',
          location: profiles[0].location || ''
        });
        return profiles[0];
      }
      return null;
    },
    enabled: !!user
  });

  const { data: footprint } = useQuery({
    queryKey: ['latestFootprint'],
    queryFn: async () => {
      const footprints = await base44.entities.CarbonFootprint.filter(
        { created_by: user?.email, completed: true },
        '-created_date',
        1
      );
      return footprints[0] || null;
    },
    enabled: !!user
  });

  const { data: userChallenges = [] } = useQuery({
    queryKey: ['userChallenges'],
    queryFn: async () => {
      return base44.entities.UserChallenge.filter({ created_by: user?.email });
    },
    enabled: !!user
  });

  const saveMutation = useMutation({
    mutationFn: async (data) => {
      if (profile) {
        await base44.entities.UserProfile.update(profile.id, data);
      } else {
        await base44.entities.UserProfile.create(data);
      }
    },
    onSuccess: () => {
      queryClient.invalidateQueries(['userProfile']);
      setIsEditing(false);
      toast.success('Profile updated!');
    }
  });

  const handleSave = () => {
    saveMutation.mutate(formData);
  };

  const handleLogout = () => {
    base44.auth.logout();
  };

  const completedChallenges = userChallenges.filter(uc => uc.status === 'completed').length;
  const memberSince = profile?.created_date 
    ? new Date(profile.created_date).toLocaleDateString('en-US', { month: 'long', year: 'numeric' })
    : 'New member';

  const planetHealth = profile ? Math.min(100, 50 + (profile.eco_points || 0) / 50) : 50;

  const achievements = [
    { 
      id: 'first_step', 
      name: 'First Step', 
      description: 'Complete your first challenge', 
      unlocked: completedChallenges >= 1,
      icon: 'ðŸŒ±'
    },
    { 
      id: 'week_warrior', 
      name: 'Week Warrior', 
      description: '7-day streak', 
      unlocked: (profile?.longest_streak || 0) >= 7,
      icon: 'ðŸ”¥'
    },
    { 
      id: 'tree_planter', 
      name: 'Tree Planter', 
      description: 'Plant 10 virtual trees', 
      unlocked: (profile?.trees_planted || 0) >= 10,
      icon: 'ðŸŒ³'
    },
    { 
      id: 'eco_warrior', 
      name: 'Eco Warrior', 
      description: 'Earn 1000 eco-points', 
      unlocked: (profile?.eco_points || 0) >= 1000,
      icon: 'âš¡'
    },
    { 
      id: 'carbon_cutter', 
      name: 'Carbon Cutter', 
      description: 'Save 100kg COâ‚‚', 
      unlocked: (profile?.total_co2_saved || 0) >= 100,
      icon: 'ðŸŒ'
    },
    { 
      id: 'month_master', 
      name: 'Month Master', 
      description: '30-day streak', 
      unlocked: (profile?.longest_streak || 0) >= 30,
      icon: 'ðŸ‘‘'
    },
  ];

  return (
    <div className="min-h-screen bg-gradient-to-b from-emerald-50 via-white to-teal-50">
      <div className="max-w-4xl mx-auto px-4 py-8">
        {/* Header */}
        <motion.div 
          className="text-center mb-8"
          initial={{ opacity: 0, y: -20 }}
          animate={{ opacity: 1, y: 0 }}
        >
          <div className="relative inline-block">
            <Avatar className="h-24 w-24 ring-4 ring-emerald-200">
              <AvatarImage src={profile?.avatar_url} />
              <AvatarFallback className="bg-gradient-to-br from-emerald-400 to-teal-500 text-white text-3xl font-bold">
                {profile?.username?.charAt(0).toUpperCase() || user?.full_name?.charAt(0).toUpperCase() || '?'}
              </AvatarFallback>
            </Avatar>
            {!isEditing && (
              <button className="absolute bottom-0 right-0 w-8 h-8 rounded-full bg-white shadow-lg flex items-center justify-center">
                <Camera className="w-4 h-4 text-gray-500" />
              </button>
            )}
          </div>
          <h1 className="text-2xl font-black text-gray-900 mt-4">
            {profile?.username || user?.full_name || 'Eco Warrior'}
          </h1>
          <div className="flex items-center justify-center gap-2 text-gray-500 text-sm mt-1">
            {profile?.location && (
              <>
                <MapPin className="w-4 h-4" />
                <span>{profile.location}</span>
                <span>â€¢</span>
              </>
            )}
            <Calendar className="w-4 h-4" />
            <span>Member since {memberSince}</span>
          </div>
        </motion.div>

        <div className="grid md:grid-cols-2 gap-6">
          {/* Left Column */}
          <div className="space-y-6">
            {/* Edit Profile Card */}
            <Card className="p-6 bg-white">
              <div className="flex items-center justify-between mb-4">
                <h3 className="font-bold text-gray-900 flex items-center gap-2">
                  <Settings className="w-5 h-5 text-gray-500" />
                  Profile Settings
                </h3>
                {!isEditing ? (
                  <Button variant="outline" size="sm" onClick={() => setIsEditing(true)}>
                    Edit
                  </Button>
                ) : (
                  <div className="flex gap-2">
                    <Button variant="outline" size="sm" onClick={() => setIsEditing(false)}>
                      Cancel
                    </Button>
                    <Button 
                      size="sm" 
                      onClick={handleSave}
                      disabled={saveMutation.isPending}
                      className="bg-emerald-600 hover:bg-emerald-700"
                    >
                      <Save className="w-4 h-4 mr-1" />
                      Save
                    </Button>
                  </div>
                )}
              </div>

              <div className="space-y-4">
                <div>
                  <Label>Display Name</Label>
                  <Input
                    value={formData.username}
                    onChange={(e) => setFormData({ ...formData, username: e.target.value })}
                    disabled={!isEditing}
                    placeholder="Your display name"
                  />
                </div>
                <div>
                  <Label>Location</Label>
                  <Input
                    value={formData.location}
                    onChange={(e) => setFormData({ ...formData, location: e.target.value })}
                    disabled={!isEditing}
                    placeholder="City, Country"
                  />
                </div>
                <div>
                  <Label>Email</Label>
                  <Input
                    value={user?.email || ''}
                    disabled
                    className="bg-gray-50"
                  />
                </div>
              </div>
            </Card>

            {/* Stats Card */}
            <Card className="p-6 bg-gradient-to-br from-emerald-50 to-teal-50 border-emerald-100">
              <h3 className="font-bold text-gray-900 mb-4">Your Impact</h3>
              <div className="grid grid-cols-2 gap-4">
                <div className="text-center p-4 bg-white rounded-xl">
                  <Zap className="w-6 h-6 text-yellow-500 mx-auto mb-2" />
                  <p className="text-2xl font-bold text-gray-900">{(profile?.eco_points || 0).toLocaleString()}</p>
                  <p className="text-xs text-gray-500">Eco Points</p>
                </div>
                <div className="text-center p-4 bg-white rounded-xl">
                  <TreeDeciduous className="w-6 h-6 text-emerald-500 mx-auto mb-2" />
                  <p className="text-2xl font-bold text-gray-900">{profile?.trees_planted || 0}</p>
                  <p className="text-xs text-gray-500">Trees Planted</p>
                </div>
                <div className="text-center p-4 bg-white rounded-xl">
                  <Flame className="w-6 h-6 text-orange-500 mx-auto mb-2" />
                  <p className="text-2xl font-bold text-gray-900">{profile?.longest_streak || 0}</p>
                  <p className="text-xs text-gray-500">Best Streak</p>
                </div>
                <div className="text-center p-4 bg-white rounded-xl">
                  <TrendingDown className="w-6 h-6 text-blue-500 mx-auto mb-2" />
                  <p className="text-2xl font-bold text-gray-900">{((profile?.total_co2_saved || 0) / 1000).toFixed(1)}t</p>
                  <p className="text-xs text-gray-500">COâ‚‚ Saved</p>
                </div>
              </div>
            </Card>

            {/* Logout */}
            <Button 
              variant="outline" 
              className="w-full text-red-600 border-red-200 hover:bg-red-50"
              onClick={handleLogout}
            >
              <LogOut className="w-4 h-4 mr-2" />
              Log Out
            </Button>
          </div>

          {/* Right Column */}
          <div className="space-y-6">
            {/* Mini Planet */}
            <Card className="p-6 bg-gradient-to-br from-indigo-900 to-purple-900">
              <h3 className="font-bold text-white mb-4 text-center">Your Planet</h3>
              <VirtualPlanet 
                planetHealth={planetHealth}
                trees={profile?.trees_planted || 0}
                animals={profile?.animals_unlocked || ['bird']}
                ecoPoints={profile?.eco_points || 0}
                size="medium"
                showDetails={false}
              />
            </Card>

            {/* Achievements */}
            <Card className="p-6 bg-white">
              <h3 className="font-bold text-gray-900 mb-4 flex items-center gap-2">
                <Award className="w-5 h-5 text-amber-500" />
                Achievements
              </h3>
              <div className="grid grid-cols-3 gap-3">
                {achievements.map((achievement) => (
                  <motion.div
                    key={achievement.id}
                    className={`
                      p-3 rounded-xl text-center transition-all
                      ${achievement.unlocked 
                        ? 'bg-gradient-to-br from-amber-50 to-yellow-50 border-2 border-amber-200' 
                        : 'bg-gray-50 opacity-50 grayscale'
                      }
                    `}
                    whileHover={achievement.unlocked ? { scale: 1.05 } : {}}
                  >
                    <div className="text-2xl mb-1">{achievement.icon}</div>
                    <p className="text-xs font-semibold text-gray-700">{achievement.name}</p>
                  </motion.div>
                ))}
              </div>
            </Card>

            {/* Carbon Footprint Summary */}
            {footprint && (
              <Card className="p-6 bg-gradient-to-br from-slate-50 to-gray-100">
                <h3 className="font-bold text-gray-900 mb-3">Latest Footprint</h3>
                <div className="flex items-baseline gap-2 mb-2">
                  <span className="text-3xl font-black text-gray-900">
                    {((footprint.total_co2_kg || 0) / 1000).toFixed(1)}
                  </span>
                  <span className="text-gray-500">tons COâ‚‚/year</span>
                </div>
                <div className="h-2 bg-gray-200 rounded-full overflow-hidden">
                  <div 
                    className={`h-full ${
                      footprint.total_co2_kg < 6000 
                        ? 'bg-emerald-500' 
                        : footprint.total_co2_kg < 10000 
                          ? 'bg-yellow-500' 
                          : 'bg-red-500'
                    }`}
                    style={{ width: `${Math.min((footprint.total_co2_kg / 12000) * 100, 100)}%` }}
                  />
                </div>
                <p className="text-xs text-gray-400 mt-2">
                  Target: 2 tons/year â€¢ National avg: 8.5 tons/year
                </p>
              </Card>
            )}
          </div>
        </div>
      </div>
    </div>
  );
}
